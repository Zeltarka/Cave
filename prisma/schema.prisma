// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // ou "postgresql" si vous préférez
  url      = env("DATABASE_URL")
}

model Commande {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())

  // Informations client
  nom           String
  prenom        String
  email         String
  adresse       String
  codepostal    String
  ville         String

  // Détails commande
  produits      Json     // Stocke le panier en JSON
  total         Float

  // Statut
  statut        String   @default("en_attente") // en_attente, payee, expediee, terminee

  // Notes admin (optionnel)
  notes         String?

  @@index([createdAt])
  @@index([statut])
  @@index([email])
}